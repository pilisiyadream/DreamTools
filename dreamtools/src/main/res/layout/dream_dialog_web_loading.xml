<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dream_bg_dialog"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="55dp">

        <TextView
            android:id="@+id/dialog_tip_title"
            style="@style/dream_blue_0180c6_21_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="标题" />

        <TextView
            android:id="@+id/dialog_tip_time"
            style="@style/dream_red_ff2600_21_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="60"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_shape_loading"
        android:layout_gravity="center"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_width="match_parent"
        android:layout_height="30dip" />

    <TextView
        android:id="@+id/dialog_tip_content"
        style="@style/dream_black_333333_18_center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minLines="3"
        android:text="内容" />


</LinearLayout>
