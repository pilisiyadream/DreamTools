<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dream_bg_choice"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left"
            style="@style/dream_blue_0180c6_21_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请选择社保卡读卡方式" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/dream_blue_00b4f0"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_insert"
            style="@style/dream_black_333333_16_center"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_button_state"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="插卡" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/tv_hui"
            style="@style/dream_black_333333_16_center"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_button_state"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="三代卡\n挥卡" />
    </LinearLayout>


</LinearLayout>
